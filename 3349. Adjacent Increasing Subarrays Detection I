class Solution {
public:
    bool hasIncreasingSubarrays(vector<int>& nums, int k) {
        int cont = 1,last = 0;
        for(int i=1;i<nums.size();i++){
            if(nums[i]>nums[i-1])cont++;
            else { last = cont;cont=1; }

            if(cont>=k*2) return true;
            if(min(last,cont)>=k)return true;
            // cout<<cont<<" "<<last<<endl;

        }   
        return false;
    }
};
