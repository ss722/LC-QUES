class Solution {
public:
    bool isPowerOfFour(int n) {
       for(int i=0;i<32;i+=2){
          if((1<<i)==n) return true;     
       }
       return false;
    }
};

///////////////////////////////////////////////////////////////////////////////



class Solution {
public:
    bool isPowerOfFour(int n) {
        if(n<0) return false;
        while(n>3){
            if(n%4!=0) return false;
            n/=4;
        }
        return n==1?true:false;
    }
};
