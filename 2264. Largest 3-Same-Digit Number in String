class Solution {
public:
    string largestGoodInteger(string num) {
        string curr = "";
        if(num.size()<3) return curr;
        for(int i=0;i<num.size()-2;i++){
            if(num[i]==num[i+1] && num[i+1]==num[i+2]){
                string news = num.substr(i,3);
                curr = max(news,curr);
            }
        }
        return curr;
    }
};
