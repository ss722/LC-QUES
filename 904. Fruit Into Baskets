class Solution {
public:
    int totalFruit(vector<int>& fruits) {
        unordered_map<int,int> mp;

        int ans = 0;
        int left = 0;
        for(int i=0;i<fruits.size();i++){
            mp[fruits[i]]++;
            if(mp.size()>2){
                // remove element 
                mp[fruits[left]]--;
                if(mp[fruits[left]]==0) mp.erase(fruits[left]);
                left++;
            }
            if(mp.size()<=2) ans = max(ans,i-left+1);
        }
        return ans;
    }
};
