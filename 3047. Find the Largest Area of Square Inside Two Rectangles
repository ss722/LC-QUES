class Solution {
public:
    long long largestSquareArea(vector<vector<int>>& bottomLeft, vector<vector<int>>& topRight) {
        long long ans = 0;

        for(int i=0;i<bottomLeft.size();i++){
            for(int j=i+1;j<bottomLeft.size();j++){
                int lowx = max(bottomLeft[i][0],bottomLeft[j][0]);
                int lowy = max(bottomLeft[i][1],bottomLeft[j][1]);
                int highx = min(topRight[i][0],topRight[j][0]);
                int highy = min(topRight[i][1],topRight[j][1]);

                if(lowx<highx && lowy<highy){
                    long long curr = min(highx-lowx,highy-lowy);
                    ans = max(ans,curr*curr);
                }
            }
        }
        return ans;
    }
};
