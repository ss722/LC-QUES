class Solution {
public:
    int n,m;
    int f(int i,int j,string &s1, string &s2,vector<vector<int>> &dp){
        if(i==n && j==m) return 0;
        if(i==n){
            int sum = 0;
            for(;j<m;j++) sum+= s2[j];
            return sum; 
        }
        else if(j==m){
            int sum = 0;
            for(;i<n;i++) sum+= s1[i];
            return sum; 
        }
        if(dp[i][j]!=-1) return dp[i][j];

        if(s1[i]==s2[j]){
            return dp[i][j]= f(i+1,j+1,s1,s2,dp);
        }
        return dp[i][j] = min((int)s1[i] + f(i+1,j,s1,s2,dp),(int)s2[j]+f(i,j+1,s1,s2,dp));
    }
    int minimumDeleteSum(string s1, string s2) {
        n=s1.size();
        m=s2.size();
        vector<vector<int>> dp(n,vector<int>(m,-1));
        return f(0,0,s1,s2,dp);
        
    }
};
