class Solution {
public:
    vector<int> findDiagonalOrder(vector<vector<int>>& mat) {
        if(mat.empty() || mat[0].empty()){
            return {};
        }
        int n = mat.size();
        int m = mat[0].size();
        vector<int> v(n*m);

        int row=0,col=0;
        for(int i=0;i<n*m;i++){
            v[i]=mat[row][col];
            
            //Even
            if((row+col)%2==0){
                // Col check first as if both col==m-1 && row==0 , then we do row++ in that case
                if(col == m-1) row++;
                else if(row==0) col++;
                else {row--;col++;}
            }
            //Odd case
            else{
                // Row check first as if both row==n-1 && col==0 , then we do col++ in that case
                if(row == n-1) col++;
                else if(col==0) row++;
                else{row++;col--;}
            }
        }
        return v;

    }
};
