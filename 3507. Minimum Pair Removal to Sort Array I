class Solution {
public:
    int minimumPairRemoval(vector<int>& nums) {
        int n = nums.size();

        int i=0;
        int cnt  = 0;
        while(true){
            bool flag = true;
            for(int i=1;i<n;i++){
                if(nums[i]<nums[i-1]) {
                    flag = false;
                    break;
                }
            }
            if(flag) break;

            int minsum = INT_MAX;
            int ind = -1;
            for(int i=1;i<n;i++){
                if(nums[i]+nums[i-1] < minsum){
                    minsum = nums[i]+nums[i-1];
                    ind = i-1;
                }
            }
            // Replace the element
            nums[ind] = nums[ind]+nums[ind+1];
            for(int i=ind+1;i<n-1;i++){
                nums[i] = nums[i+1];
            }
            n--;
            cnt++;
        }
        return cnt;
    }
};
