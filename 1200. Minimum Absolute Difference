class Solution {
public:
    vector<vector<int>> minimumAbsDifference(vector<int>& arr) {
        sort(begin(arr),end(arr));
        vector<vector<int>> v;
        int mindiff = INT_MAX;
        for(int i=0;i<arr.size()-1;i++){
            int currdiff = abs(arr[i+1]-arr[i]);
            if(currdiff>mindiff) continue;
            if(currdiff < mindiff){
                mindiff = currdiff;
                v.clear();
            }
            v.push_back({arr[i],arr[i+1]});
        }
        return v;
    }
};
